// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User (Psychologist)
model User {
  id        String   @id @default(cuid())
  externalId String  @unique
  name      String
  crp       String   @unique
  approach  String
  uf        String
  city      String?
  photoUrl  String?
  bio       String?
  role      String   @default("psychologist")

  // Relations
  posts     Post[]
  comments  Comment[]
  reports   Report[]
  moderationActions ModerationAction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([externalId])
  @@index([role])
}

// Post (Challenge or Debate)
model Post {
  id        String   @id @default(cuid())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  type      String   // 'challenge' | 'debate'
  title     String
  content   String
  tags      String   @default("[]") // JSON array of tags, stored as string
  status    String   @default("published") // 'published' | 'hidden' | 'removed' | 'pending_review'

  // Relations
  comments  Comment[]
  reports   Report[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([status])
  @@index([createdAt])
}

// Comment on a Post
model Comment {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  content   String
  status    String   @default("published") // 'published' | 'hidden' | 'removed'

  // Relations
  reports   Report[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId])
  @@index([authorId])
  @@index([status])
}

// Report (Content Report/Den√∫ncia)
model Report {
  id            String   @id @default(cuid())
  targetType    String   // 'post' | 'comment'
  targetId      String

  reporterId    String
  reporter      User     @relation(fields: [reporterId], references: [id], onDelete: Cascade)

  reason        String   // 'sensitive_data' | 'unethical' | 'harassment' | 'other'
  details       String?
  status        String   @default("open") // 'open' | 'under_review' | 'resolved' | 'dismissed'

  // Polymorphic relations (manual)
  relatedPost   Post?    @relation(fields: [postId], references: [id], onDelete: SetNull)
  postId        String?

  relatedComment Comment? @relation(fields: [commentId], references: [id], onDelete: SetNull)
  commentId     String?

  // Relations
  moderationActions ModerationAction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([reporterId])
  @@index([status])
  @@index([reason])
  @@index([createdAt])
}

// Moderation Action (Audit Trail)
model ModerationAction {
  id          String   @id @default(cuid())
  moderatorId String
  moderator   User     @relation(fields: [moderatorId], references: [id], onDelete: Cascade)

  action      String   // 'hide' | 'remove' | 'restore' | 'warn_author' | 'dismiss_report' | 'resolve_report'
  targetType  String   // 'post' | 'comment'
  targetId    String

  reportId    String?
  report      Report?  @relation(fields: [reportId], references: [id], onDelete: SetNull)

  notes       String?

  createdAt   DateTime @default(now())

  @@index([moderatorId])
  @@index([reportId])
  @@index([action])
  @@index([createdAt])
}
